{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Tool Output Schema",
  "description": "Schema for validating tool output",
  "type": "object",
  "properties": {
    "result": {
      "type": "object",
      "description": "Result object containing tool output"
    },
    "metadata": {
      "type": "object",
      "description": "Metadata about the tool execution",
      "properties": {
        "timestamp": {
          "type": "string",
          "format": "date-time"
        },
        "tool": {
          "type": "string"
        }
      }
    }
  },
  "required": ["result"]
}
